<div class="margin-block">
  <h2 class="txt-align-center flex-inline center txt-uppercase txt-medium margin-none">
    Recently closed
  </h2>

  <section id="popped-bubbles"  class="cards--grid">
    <% if page.used? %>
      <%= render partial: "bubbles/cards/preview", collection: page.records, as: :bubble, cached: true %>

      <% unless page.last? %>
        <%= bubbles_next_page_link "popped-bubbles", page: page, filter: filter, fetch_on_visible: true %>
      <% end %>
    <% else %>
      <p class="txt-medium translucent">Nothing here</p>
    <% end %>
  </section>
</div>
